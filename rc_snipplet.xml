<!-- Add in section <keyboard> -->

<keybinding key="A-F2">
  <action name="Execute">
    <command>runcommand</command>
  </action>
</keybinding>


<!-- Add in section <applications> -->

<application class="Runcommand">
  <decor>no</decor>
  <position force="yes">
    <x>center</x>
    <y>center</y>
  </position>
  <maximized>no</maximized>
</application>
